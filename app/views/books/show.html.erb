<div class="container">
  <div class="row">
    <%= render 'sidebar', book: Book.new, user: @user %>
    <div class="col-md-8 offset-md-1">
  		<h2>Book detail</h2>
  		<table class="table">
  		  <tbody>
  		    <tr>
            <td>
              <%= link_to user_path(@book.user_id) do %>
                <%= image_tag @book.user.get_image(100,100) %><br><%= @book.user.name %>
              <% end %>
            </td>
            <td><%= link_to @book.title, book_path(@book.id) %></td>
            <td><%= @book.body %></td>
            <td>
              <% if @book.favorited_by?(current_user) %>
                <%= link_to book_favorite_path(@book), method: :delete, class:"text-danger" do %>
                  <i class="fa-solid fa-heart"></i><%= @book.favorites.count %>
                <% end %>
              <% else %>
                <%= link_to book_favorite_path(@book), method: :post, class:"text-primary" do %>
                  <i class="fa-solid fa-heart"></i><%= @book.favorites.count %>
                <% end %>
              <% end %>
            </td>
            <td>コメント件数：<%= @book.book_comments.count %></td>
            <% if @book.user == current_user %>
              <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success" %></td>
              <td><%= link_to "Destroy", book_path(@book.id), method: :delete, class: "btn btn-sm btn-danger", "data-confirm"=>"本当に消しますか？" %></td>
            <% end %>
          </tr>
        </tbody>
      </table>

      <table>
        <% @book.book_comments.each do |book_comment| %>
          <tr>
            <td>
              <%= link_to user_path(book_comment.user_id) do %>
                <%= image_tag book_comment.user.get_image(80,80) %><br><%= book_comment.user.name %>
              <% end %>
            </td>
            <td>
              <%= book_comment.comment %>
            </td>
            <td>
              <% if book_comment.user == current_user %>
                <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn btn-sm btn-danger" %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </table>

      <div>
        <%= form_with model: [@book, @book_comment] do |f| %>
          <div class="form-group">
            <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに", class: "w-100" %>
          </div>
          <div class="form-group">
            <%= f.submit "送信" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>